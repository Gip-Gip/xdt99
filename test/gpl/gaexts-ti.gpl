* xga99 Extensions

        TITL 'xga99 Extensions'

        GROM >0000

LLS     EQU 1
AOL     EQU LLS+1

E1      EQU 1
E2      EQU 2
*expr1  equ 1 + 2 * >10 / :10 % >10 * (1+2) + 3
EXPR1   EQU 27
*expr2  equ 1 - 2 * ~3 - 4 + ( ~+~-+ 5 )  * ignore
EXPR2   EQU >FFFB

EMPTY
DATA    DATA $,$+2,EXPR1+$
*       stri 'A', 'B,B,B', >8, ' C '
        BYTE >0A,>41,>42,>2C,>42,>2C,>42,>80,>20,>43,>20
*       text 'a', '''', '', >123, 'Z;"'
        TEXT 'a'
        BYTE >27,>12,>30
        TEXT 'Z;"'
        DATA EMPTY,LLS,AOL


*** Operands

*       st v@>100(>8300),v*>200(>8380)
        ST V@>100(@>8300),V*>200(@>8380)
*       st v@>101(0),v*>201(128)
        ST V@>101(@>8300),V*>201(@>8380)


*** FMT

        FMT
        HTEX 'A''B''''C'
        HSTR 1,@>8308
        FEND


*** Pseudos

*       rb  0,@>8310
        AND >FE,@>8310
*       rb  7,V@>0010
        AND >7F,V@>0010
*       rb  E1,V*>8310
        AND >FD,V*>8310

*       sb  0,@>8390
        OR  >01,@>8390
*       sb  E2,V@>0900
        OR  >04,V@>0900
*       sb  E1+E2,*>8380
        OR  >08,*>8380

*       tbr 0,V*>8301
        CLOG >01,V*>8301
*       tbr 1,@>8380(@>8302)
        CLOG >02,@>8380(@>8302)
*       tbr 7,V@>1000(@>8303)
        CLOG >80,V@>1000(@>8303)


*** Line continuations

VAR1   EQU  >8300
VAR2   EQU  >8302
START  ALL  >20
       DST  1,@VAR1
       DST  2,@VAR2


*** Special cases

*       rand
        RAND 255


        END
